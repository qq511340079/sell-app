border-1px($color)
  position:relative;
  &::after
    position: absolute;
    left:0;
    bottom:0;
    right:0;
    border-bottom 1px solid $color;
    content: '\20';
    display: block;

border-1px-right($color)
  position:relative
  &::after
    position:absolute
    top:0
    bottom:0
    right:0
    border-right:1px solid $color
    content:'\20'
    display:block

border-none()
  &::after
    display:none

bg-image($url)
  background-image :url($url + "@2x.png")
  @media (min-device-pixel-ratio: 3),(-webkit-min-device-pixel-ratio:3 )
    background-image :url($url + "@3x.png")


